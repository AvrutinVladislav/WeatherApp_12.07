<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.weatherapp.fragments.main_fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_hoursFragment"
            app:destination="@id/hoursFragment" />
        <action
            android:id="@+id/action_mainFragment_to_daysFragment"
            app:destination="@id/daysFragment" />
    </fragment>
    <fragment
        android:id="@+id/hoursFragment"
        android:name="com.example.weatherapp.fragments.hours_fragment.HoursFragment"
        android:label="fragment_days"
        tools:layout="@layout/fragment_days" />
    <fragment
        android:id="@+id/daysFragment"
        android:name="com.example.weatherapp.fragments.days_fragment.DaysFragment"
        android:label="DaysFragment" />
</navigation>